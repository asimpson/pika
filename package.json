{
  "name": "pokemon",
  "version": "1.0.0",
  "description": "A sample React app that has to catch them all",
  "main": "app.js",
  "scripts": {
    "start": "echo 'to start dev use start:dev'",
    "start:dev": "parallelshell 'webpack --watch' 'node ./watch.js' 'npm run server'",
    "prestart:dev": "webpack && npm run copy && npm run sass",
    "server": "http-server ./dist -c-1",
    "copy": "ncp public/ dist/ --stopOnErr",
    "sass": "node-sass -o dist/css -q --output-style compact scss/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pokemon",
    "react"
  ],
  "author": "Adam Simpson",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.7.5",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.4.3",
    "es6-promise": "^3.1.2",
    "exit-hook": "^1.1.1",
    "globby": "^4.0.0",
    "http-server": "^0.9.0",
    "isomorphic-fetch": "^2.2.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "shelljs": "^0.6.0",
    "tiny-lr": "^0.2.1",
    "webpack": "^1.13.0"
  }
}
